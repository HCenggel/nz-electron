{
    "compilerOptions": {
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es2015",
        "types": [
            "node"
        ],
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ],
        "outDir": "./dist/electron"
    },
    "files": [
        "electron/main.ts",
        "electron/ipc.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
